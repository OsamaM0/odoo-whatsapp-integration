<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Sync Service Tree View -->
        <record id="whatsapp_sync_service_tree" model="ir.ui.view">
            <field name="name">whatsapp.sync.service.tree</field>
            <field name="model">whatsapp.sync.service</field>
            <field name="arch" type="xml">
                <tree string="WhatsApp Sync Service" create="false" delete="false">
                    <field name="name"/>
                    <field name="last_sync_time"/>
                    <field name="sync_status" decoration-success="sync_status == 'success'" 
                           decoration-danger="sync_status == 'error'" 
                           decoration-info="sync_status == 'running'"/>
                    <field name="last_sync_message"/>
                </tree>
            </field>
        </record>

        <!-- WhatsApp Sync Service Form View -->
        <record id="whatsapp_sync_service_form" model="ir.ui.view">
            <field name="name">whatsapp.sync.service.form</field>
            <field name="model">whatsapp.sync.service</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Sync Service" create="false" delete="false">
                    <header>
                        <button name="manual_sync_all_data" string="Sync Now" type="object" 
                                class="btn-primary" icon="fa-refresh"/>
                        <button name="check_cron_status" string="Check Cron Status" type="object" 
                                class="btn-secondary" icon="fa-clock-o"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="sync_status" readonly="1"/>
                                <field name="last_sync_time" readonly="1"/>
                            </group>
                        </group>
                        <group string="Last Sync Details">
                            <field name="last_sync_message" readonly="1" widget="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- WhatsApp Sync Service Action -->
        <record id="whatsapp_sync_service_action" model="ir.actions.act_window">
            <field name="name">Sync Service</field>
            <field name="res_model">whatsapp.sync.service</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    WhatsApp Sync Service monitors and manages automated data synchronization.
                </p>
                <p>
                    The system automatically syncs WhatsApp data (contacts, groups, messages, group members) every hour.
                    You can manually trigger a sync using the "Sync Now" button.
                </p>
            </field>
        </record>
    </data>
</odoo>
