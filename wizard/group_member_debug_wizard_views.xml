<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Group Member Debug Wizard Form View -->
        <record id="view_group_member_debug_wizard" model="ir.ui.view">
            <field name="name">Group Member Debug Wizard</field>
            <field name="model">group.member.debug.wizard</field>
            <field name="arch" type="xml">
                <form string="Group Member Sync Debug">
                    <header>
                        <button name="action_test_group_sync" string="🔍 Test Group Sync" type="object" class="btn-primary"/>
                        <button name="action_run_actual_sync" string="🔄 Run Actual Sync" type="object" class="btn-warning"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Group Member Sync Debug Tool</h1>
                        </div>
                        
                        <group>
                            <group string="Test Options">
                                <field name="test_all"/>
                                <field name="group_id" attrs="{'invisible': [('test_all', '=', True)], 'required': [('test_all', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <group string="Debug Results" attrs="{'invisible': [('debug_result', '=', False)]}">
                            <field name="debug_result" nolabel="1" widget="text" readonly="1"/>
                        </group>
                        
                        <group string="API Response Details" attrs="{'invisible': [('api_response', '=', False)]}">
                            <field name="api_response" nolabel="1" widget="text" readonly="1"/>
                        </group>
                        
                        <div class="alert alert-info" role="alert">
                            <strong>How to use this debug tool:</strong>
                            <ul>
                                <li><strong>Test Group Sync:</strong> Tests the API call and shows what data is returned without making any database changes</li>
                                <li><strong>Run Actual Sync:</strong> Performs the actual group member synchronization with database updates</li>
                                <li>Check the debug results to see what data the API returns and identify any issues</li>
                            </ul>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Group Member Debug Wizard Action -->
        <record id="action_group_member_debug_wizard" model="ir.actions.act_window">
            <field name="name">Debug Group Member Sync</field>
            <field name="res_model">group.member.debug.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_group_member_debug_wizard"/>
        </record>

        <!-- Add menu item to WhatsApp menu -->
        <menuitem 
            id="menu_group_member_debug"
            name="Debug Group Members"
            parent="whatsapp_menu_root"
            action="action_group_member_debug_wizard"
            sequence="200"/>
    </data>
</odoo>
