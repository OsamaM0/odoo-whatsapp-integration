<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_whatsapp_bulk_action_wizard_form" model="ir.ui.view">
            <field name="name">whatsapp.bulk.action.wizard.form</field>
            <field name="model">whatsapp.bulk.action.wizard</field>
            <field name="arch" type="xml">
                <form string="Bulk Action Wizard">
                    <sheet>
                        <group>
                            <field name="action_type" readonly="1"/>
                            <field name="group_ids" widget="many2many_tags" readonly="1"/>
                        </group>
                        
                        <div class="alert alert-info" role="alert">
                            <strong>Action Summary:</strong><br/>
                            <span attrs="{'invisible': [('action_type', '!=', 'bulk_sync')]}">
                                This will sync information for all selected groups from the WhatsApp API.
                            </span>
                            <span attrs="{'invisible': [('action_type', '!=', 'bulk_invite')]}">
                                This will generate invite codes for all selected WHAPI groups.
                            </span>
                            <span attrs="{'invisible': [('action_type', '!=', 'bulk_members')]}">
                                This will update the member lists for all selected groups from the WhatsApp API.
                            </span>
                        </div>
                    </sheet>
                    <footer>
                        <button string="Execute" name="execute_action" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>